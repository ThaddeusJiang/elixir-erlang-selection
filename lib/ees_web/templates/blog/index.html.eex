<section >
  <%= for post <- @posts do %>
    <div id="<%= post.id %>" class="space-y-6 py-8 border-b">
      <h2 class="text-lg md:text-2xl font-bold tracking-tight ">
        <%= link post.title, to: Routes.blog_path(@conn, :show, post)%>
      </h2>

      <p class="space-x-1 flex flex-wrap">
        <%= for tag <- post.tags do %>
          <span class="block px-2 py-1 rounded bg-gray-300"> <%= tag %> </span>
        <% end %>
      </p>
    </div>
  <% end %>
</section>
